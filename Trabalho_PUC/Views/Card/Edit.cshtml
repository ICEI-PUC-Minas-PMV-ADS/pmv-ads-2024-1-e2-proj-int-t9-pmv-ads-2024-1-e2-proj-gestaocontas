@model Trabalho_PUC.Models.Card

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Editar Cartão</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f9;
        }

        h1, h4 {
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .text-danger {
            color: #d9534f;
        }

        .btn-primary {
            background-color: #49108B;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #350a66;
            }

        .back-link {
            display: inline-block;
            margin-top: 20px;
            color: #49108B;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h1>Editar Cartão</h1>

    <h4>Card</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Digitos" class="control-label"></label>
                    <input asp-for="Digitos" class="form-control" />
                    <span asp-validation-for="Digitos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vencimento" class="control-label"></label>
                    <input asp-for="Vencimento" class="form-control" />
                    <span asp-validation-for="Vencimento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Meta" class="control-label"></label>
                    <input asp-for="Meta" class="form-control" />
                    <span asp-validation-for="Meta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="back-link" asp-action="Index">Voltar a listagem</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
