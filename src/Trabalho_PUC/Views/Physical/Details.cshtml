@model Trabalho_PUC.Models.PhysicalMoney

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Detalhes do Gasto Físico</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f9;
        }

        h1, h4 {
            color: #333;
        }

        .row {
            margin-bottom: 20px;
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-bottom: 10px;
        }

        .btn-primary, .btn-secondary {
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #49108B;
        }

            .btn-primary:hover {
                background-color: #350a66;
            }

        .btn-secondary {
            background-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .action-links a {
            color: #49108B;
            text-decoration: none;
            margin-right: 10px;
        }

            .action-links a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h1>Detalhes do Gasto Físico</h1>

    <div>
        <h4>Gasto Físico</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tipogasto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tipogasto)
            </dd>
        </dl>
    </div>
    <div class="action-links">
        <a class="btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
        <a class="btn-secondary" asp-action="Index">Voltar à lista</a>
    </div>
</body>
</html>
