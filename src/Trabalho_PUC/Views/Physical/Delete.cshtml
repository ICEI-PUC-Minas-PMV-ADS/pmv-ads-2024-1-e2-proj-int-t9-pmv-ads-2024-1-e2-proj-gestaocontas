@model Trabalho_PUC.Models.PhysicalMoney

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Excluir Gastos Físicos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f9;
        }

        h1, h3, h4 {
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            font-weight: bold;
        }

        .text-danger {
            color: #d9534f;
        }

        .btn-primary, .btn-danger {
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #49108B;
        }

            .btn-primary:hover {
                background-color: #350a66;
            }

        .btn-danger {
            background-color: #d9534f;
        }

            .btn-danger:hover {
                background-color: #c9302c;
            }

        .back-link {
            display: inline-block;
            margin-top: 20px;
            color: #49108B;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
            }

        dl {
            margin-bottom: 20px;
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>Excluir</h1>

    <h3>Tem certeza de que deseja excluir este item?</h3>
    <div>
        <h4>Gastos Físicos</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tipogasto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tipogasto)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Voltar à lista</a>
        </form>
    </div>
</body>
</html>
