@model Trabalho_PUC.Models.Card

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Excluir Cartão</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f9;
        }

        h1, h3, h4 {
            color: #333;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .col-sm-2 {
            font-weight: bold;
        }

        .col-sm-2, .col-sm-10 {
            padding: 10px;
        }

        dl {
            width: 100%;
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        dt, dd {
            margin-bottom: 10px;
        }

        dt {
            color: #49108B;
        }

        .form-actions {
            margin-top: 20px;
        }

        .btn-danger {
            background-color: #d9534f;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c9302c;
            }

        .back-link {
            margin-left: 10px;
            color: #49108B;
            text-decoration: none;
            padding: 10px 15px;
            border: 1px solid #49108B;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .back-link:hover {
                background-color: #49108B;
                color: white;
            }
    </style>
</head>
<body>
    <h1>Excluir Cartão</h1>

    <h3>Você tem certeza que deseja excluir este item?</h3>
    <div>
        <h4>Card</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Digitos)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Digitos)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Vencimento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vencimento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Meta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Meta)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-actions">
                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                <a class="back-link" asp-action="Index">Voltar a listagem</a>
            </div>
        </form>
    </div>
</body>
</html>
